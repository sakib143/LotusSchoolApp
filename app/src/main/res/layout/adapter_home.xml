<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="scheduleModel"
            type="com.appforschool.data.model.ScheduleModel.Data" />

        <variable
            name="scheduleClickListner"
            type="com.appforschool.listner.HomeListner" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:textSize="@dimen/_14ssp"
                tools:text="Time"
                android:text="@{scheduleModel.schdatetime}" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:textSize="@dimen/_14ssp"
                tools:text="Course name"
                android:text="@{scheduleModel.courseName}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:textSize="@dimen/_14ssp"
                tools:text="Course details"
                android:text="@{scheduleModel.topic}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:textSize="@dimen/_14ssp"
                tools:text="Teacher name"
                android:text="@{scheduleModel.Column1}" />


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/calibri"
            android:text="Join"
            android:textSize="@dimen/_13ssp"
            android:onClick="@{()-> scheduleClickListner.openVideoCalling(scheduleModel)}"/>

    </RelativeLayout>
</layout>