<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="scheduleModel"
            type="com.appforschool.data.model.ScheduleModel.Data" />

        <variable
            name="scheduleClickListner"
            type="com.appforschool.listner.HomeListner" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:background="@color/colorScheduleBackground">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_110sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_timeline_circle" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/bg_cardview"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="@{scheduleModel.schdatetime}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    tools:text="Time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="@{`Duration: `+ scheduleModel.duration + ` min`}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14ssp"
                    tools:text="Duration"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ivSubjectTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14ssp"
                    android:text="@{scheduleModel.courseName}"
                    tools:text="Subject"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvTeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivSubjectTitle"
                    android:fontFamily="@font/calibri"
                    android:text="@{scheduleModel.teacher}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14ssp"
                    tools:text="Teacher name" />

<!--                <TextView-->
<!--                    android:id="@+id/tvTopicTitle"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:fontFamily="@font/calibri"-->
<!--                    android:textColor="@color/colorBlack"-->
<!--                    android:textSize="@dimen/_14ssp"-->
<!--                    android:text="@string/topic"-->
<!--                    android:visibility="@{scheduleModel.topic.length() > 0 ? View.VISIBLE : View.GONE}"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvTeacherName"
                    android:paddingLeft="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:text="@{scheduleModel.topic}"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="end"
                        android:minLines="1"
                        android:maxLines = "2"
                        tools:text="This This is first "/>

                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_file_save"
                    android:onClick="@{()-> scheduleClickListner.openSubjectDetails(scheduleModel)}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/calibri"
                    android:textColor="@color/colorJoinMeeting"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    android:text="@string/connect"
                    android:onClick="@{()-> scheduleClickListner.openVideoCalling(scheduleModel)}"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</layout>



