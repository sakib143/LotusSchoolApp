<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="assignmentModel"
            type="com.appforschool.data.model.AssignmentModel.Data" />

        <variable
            name="assignmentListner"
            type="com.appforschool.listner.HomeListner" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorScheduleBackground"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_cardview"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivFileImage"
                    setAssignmentIcon="@{assignmentModel}"
                    android:layout_width="0dp"
                    android:layout_height="61dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.15"
                    android:src="@mipmap/ic_launcher"
                    android:onClick="@{()-> assignmentListner.openAssignmentFile(assignmentModel)}"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.60"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/ivFileImage"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        tools:text="File Title"
                        android:text="@{assignmentModel.filetitle}"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/colorBlack"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:minLines="1"
                        android:textSize="@dimen/_14ssp"
                        tools:text="File description"
                        android:text="@{assignmentModel.filedescr}"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/ivFileImage"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        tools:text="File Type"
                        android:text="@{assignmentModel.assgdate}"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:minLines="1"
                        android:textSize="@dimen/_12ssp"
                        tools:text="File Size"
                        android:text="@{assignmentModel.assgtime}"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:minLines="1"
                        android:textSize="@dimen/_12ssp"
                        tools:text="File Size"
                        android:text="@{assignmentModel.sizeinkb}"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:maxLines="2"
                android:minLines="1"
                android:text="@{assignmentModel.sharedby}"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/_12ssp"
                tools:text="Shared by"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/calibri"
                android:textColor="@color/colorJoinMeeting"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:text="@string/attach_answer"
                tools:visibility="gone"
                android:onClick="@{()-> assignmentListner.openSubmissionFile(assignmentModel)}"
                android:visibility="@{assignmentModel.completedstatus == 0 ? View.VISIBLE : View.GONE}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{assignmentModel.completedstatus == 1 ? View.VISIBLE : View.GONE}"
                tools:visibility="visible"
                android:gravity="end">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_single_tik"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/colorGreen"/>

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textStyle="bold"
                    android:background="@drawable/ic_attach_file"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:onClick="@{()-> assignmentListner.openSubmissionFile(assignmentModel)}"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>