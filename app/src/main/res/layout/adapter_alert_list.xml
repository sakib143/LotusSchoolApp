<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="alertModel"
            type="com.appforschool.data.model.AlertModel.Data" />

        <variable
            name="alertListner"
            type="com.appforschool.listner.HomeListner" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorScheduleBackground"
        android:onClick="@{()-> alertListner.openAlertDetails(alertModel)}"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <com.appforschool.utils.circle_imageview.CircularImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Date"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri"
                    android:text="@{alertModel.notificationDate}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Time"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri"
                    android:text="@{alertModel.notificationDate}"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Descriptions"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/calibri"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@{alertModel.notificationDesc}"
                android:minLines="1"
                android:maxLines="3"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/view_more"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:fontFamily="@font/calibri"
            android:textColor="@color/colorJoinMeeting"/>


    </LinearLayout>

</layout>